{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "NodeNext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "baseUrl": "./",
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "ts-node": {
      "esm": true,
      "experimentalSpecifiers": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }